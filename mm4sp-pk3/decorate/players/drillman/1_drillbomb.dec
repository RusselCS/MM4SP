actor DrillManWep : BaseMM8BDMWep
{
Dropitem ""
inventory.icon "NULLICON"
Weapon.AmmoUse 1
Weapon.AmmoGive 3
Weapon.SlotNumber 1
Tag "Drill Bomb"
Inventory.Pickupmessage "Power up! Music in your heart!"
weapon.ammotype "DrillManAmmo"
+WEAPON.NOAUTOFIRE
States
{
Spawn:
WEAP V 1
loop
Ready:
DRIA A 0 ACS_ExecuteAlways(998,0,782)
DRIA A 0 A_JumpIfInventory("DrillManAmmo",1,"Ready2")
goto NoAmmoReload
Ready2:
DRIA A 35 A_WeaponReady
DRIA A 0 A_JumpIfInventory("DrillManAmmo",3,"Ready2")
Goto Reload
Reload:
DRIA D 0 //A_PlaySoundEx("weapon/crackerthrow","SoundSlot7")
Reload2:
DRIA D 20 A_WeaponReady
DRIA D 0 A_GiveInventory("DrillManAmmo",1)
DRIA D 0 A_PlaySoundEx("weapon/crashland","SoundSlot7")
DRIA D 0 A_JumpIfInventory("DrillManAmmo",3,"Ready2")
goto Reload2
Deselect:
TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_Lower
DRIA A 1 A_Lower
Loop
Select:
TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_Raise
DRIA A 1 A_Raise
Loop
Fire:
DRIA A 0 A_PlaySoundEx("weapon/mbuster","Weapon")
DRIA A 0 A_FireCustomMissile("DrillBombSP",0,1,8,0)
DRIA A 0 A_JumpIfNoAmmo("NoAmmo")
DRIA BC 4
DRIA A 6
DRIA A 0 A_Refire
Goto Ready+1
NoAmmo:
DRIA BE 4
DRIA F 6
NoAmmoReload:
DRIA D 0 //A_PlaySoundEx("weapon/crackerthrow","SoundSlot7")
DRIA G 1 A_WeaponReady(WRF_NOFIRE)
DRIA D 0 A_JumpIfInventory("DrillManAmmo",3,"Ready2") //deals with weird edge cases
DRIA G 19 A_WeaponReady(WRF_NOFIRE)
DRIA D 0 A_GiveInventory("DrillManAmmo",1)
DRIA D 0 A_PlaySoundEx("weapon/crashland","SoundSlot7")
goto Reload2
}
}

actor DrillManAmmo : Ammo
{
inventory.amount 1
inventory.maxamount 3
+INVENTORY.IGNORESKILL
}

actor DrillBombSP 
{
PROJECTILE
+EXPLODEONWATER
species "Player"
+THRUSPECIES
Speed 25
Damage 0
Translation "87:87=4:4"
damagetype "Buster"
Scale 2.5
Height 6
Radius 6
States
{
Spawn:
DRIL A 0
DRIL A 0 A_PlaySoundEx("weapon/drillfly","Weapon")
DRIL ABC 2 
loop
Death:
DRIL A 0 A_Stop
DRIL A 0 A_PlaySoundEx("weapon/drillexplode", "Weapon")
DRIL A 0 A_Explode(30,96,0,0,16)
TNT1 A 2 A_SpawnItem("DrillExplode")
stop
}
}