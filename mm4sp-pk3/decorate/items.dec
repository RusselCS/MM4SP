actor YashichiPickup : CustomInventory 
{
inventory.pickupmessage "Picked up a Yashichi!"
inventory.amount 1
inventory.pickupsound "item/1up"
Scale 2.0
States
{
Spawn:
YASH C 1
loop
Pickup:
YASH C 0 ACS_ExecuteAlways(992, 0, 0, 1)
YASH C 0 HealThing(100)
stop
}
}

