actor RingManWep : BaseMM8BDMWep
{
	dropitem ""
	inventory.icon "NULLICON"
	Weapon.AmmoUse 1
	Weapon.AmmoGive 5
	Weapon.SlotNumber 4
	Tag "Ring Boomerang"
	Inventory.Pickupmessage "Power up! Ring Thing Cometh!"
	weapon.ammotype "RingManAmmo"
	+WEAPON.NOAUTOFIRE
	States
	{
	Spawn:
		C_04 E 1
		loop
	Ready:
		RIN1 A 0 ACS_ExecuteAlways(998,0,784)
		RIN1 A 0 A_JumpIfInventory("RingManAmmo", 5, "ReadyFull")
		RIN1 A 0 A_JumpIfInventory("RingmanReloading", 1, "ReadyFull")
		RIN1 A 0 A_JumpIfInventory("RingmanReload", 1, "ReadyFull")
		RIN1 A 0 A_JumpIfNoAmmo("ReadyEmpty")
		RIN1 A 1 A_WeaponReady
		goto Ready+1

	ReadyFull:
		RIN1 A 1 A_WeaponReady(WRF_NOSECONDARY)
		goto Ready+1

	ReadyEmpty:
		RIN1 A 1 A_WeaponReady(WRF_NOPRIMARY)
		goto Ready+1

	Deselect:
		TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_Lower
		TNT1 A 1 A_Lower
		Loop
	Select:
		TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_Raise
		TNT1 A 1 A_Raise
		Loop

	Fire:
		TNT1 A 0 A_JumpIfNoAmmo("ReadyEmpty")
		RIN1 A 0 A_PlaySoundEx("weapon/ringboomerang","Weapon")
		RIN1 K 0 A_TakeInventory("RingmanReloading", 9)
		RIN1 K 0 A_TakeInventory("RingmanReload", 1)
		RIN1 K 0 A_FireCustomMissile("RingBoomerangB",0,1,8,0)
		RIN1 BCDEF 1
		TNT1 A 1
		RIN1 GH 1
		RIN1 A 0 A_Refire
		goto Ready+1

	Altfire:
		RIN1 A 0 A_GiveInventory("RingmanReloading", 5-CallACS("4SP_CountInv", 0))
		RIN1 A 0 A_GiveInventory("RingmanReload", 1)
		RIN1 A 0 A_GiveInventory("RingmanReturn", 1)
		RIN1 A 0 A_Gunflash
		RIN1 HG 1
		TNT1 A 1
		RIN1 FEDCB 1
		goto Ready+1

	Flash:
		TNT1 A 1
		TNT1 A 0 A_JumpIfInventory("RingManAmmo", 5, "FlashEnd")
		TNT1 A 0 A_JumpIfInventory("RingmanReload", 1, "Flash")
		TNT1 A 0 A_JumpIfInventory("RingmanReloading", 1, "FlashReload")
		goto FlashEnd
	FlashReload:
		TNT1 A 0 A_GiveInventory("RingReturn", 1)
		TNT1 A 0 A_GiveInventory("RingManAmmo", 1)
		TNT1 A 20
		TNT1 A 0 A_TakeInventory("RingmanReloading", 1)
		TNT1 A 0 A_JumpIfInventory("RingmanReloading", 1, "FlashReload")
		goto FlashEnd
	FlashEnd:
		TNT1 A 0
		stop
	}
}

actor RingManAmmo : Ammo
{
inventory.amount 1
inventory.maxamount 5
+INVENTORY.IGNORESKILL
}

actor RingmanReload : Powerup
{
	powerup.duration 85
}

actor RingBossReloadCancel : Powerup
{
	powerup.duration 2
}

actor RingmanReloading : Counter { inventory.maxamount 5 }
actor RingmanReturn : Powerup { powerup.duration 3 }

actor RingBoomerangB
{
	var int user_POWER;
	Translation "192:192=229:229"
	PROJECTILE
	damagetype "RingBoomerangB"
	Obituary "$OB_RINGBOOMERANG"
	+RIPPER
	+NOTARGETSWITCH
	+CANBOUNCEWATER
	+SKYEXPLODE
	-ACTIVATEPCROSS
	-ACTIVATEIMPACT
	bouncetype "Hexen"
	bouncefactor 1.1
	damage (0)
	Radius 12
	Height 12
	speed 40
	scale 2.5
	States
	{
	Spawn:
		RIN1 A 0
		RIN1 A 0 A_SetUserVar(user_POWER, 10)
		RIN1 A 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 IIJJ 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 KKLL 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIf(CallACS("4SP_CheckAlive")==0, "Death")
		RIN1 W 0 A_SetArg(0, 3)
		goto SpawnLoop
	SpawnLoop:
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 W 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 II 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 W 0 A_SetArg(0, args[0]-1)
		RIN1 W 0 A_JumpIf(args[0] <= 0, "SpawnWait")
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 JJ 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 W 0 A_SetArg(0, args[0]-1)
		RIN1 W 0 A_JumpIf(args[0] <= 0, "SpawnWait")
		RIN1 W 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 KK 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 W 0 A_SetArg(0, args[0]-1)
		RIN1 W 0 A_JumpIf(args[0] <= 0, "SpawnWait")
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 LL 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 W 0 A_SetArg(0, args[0]-1)
		RIN1 W 0 A_JumpIf(args[0] <= 0, "SpawnWait")
		RIN1 W 0 A_JumpIf(CallACS("4SP_CheckAlive")==0, "Death")
		loop
	SpawnWait:
		RING W 0 A_ChangeFlag(DONTSPLASH, true)
		RIN1 W 0 A_SetUserVar(user_POWER, 3)
		RIN1 W 0 A_Stop
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 W 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 II 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 JJ 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 W 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 KK 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 A 0 A_JumpIfInTargetInventory("RingManAmmo", 5, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 LL 1 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 W 0 A_JumpIfInTargetInventory("IsDead", 1, "Death")
		RIN1 W 0 A_JumpIfInTargetInventory("RingmanReturn", 1, "Return")
		RIN1 W 0 A_JumpIf(CallACS("4SP_CheckAlive")==0, "Death")
		goto SpawnWait+2
	Return:
		TNT1 A 0 A_ChangeFlag(THRUACTORS, true)
		TNT1 A 0 A_ChangeFlag(NOINTERACTION, true)
		TNT1 A 0 A_RearrangePointers(AAPTR_DEFAULT, AAPTR_DEFAULT, AAPTR_TARGET)
		TNT1 A 0 A_SetUserVar(user_POWER, 10)
		TNT1 A 0 A_FaceTarget
		RIN1 I 0 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 H 1 A_SeekerMissile(180, 180, SMF_PRECISE)
		RIN1 W 0 A_JumpIfCloser(32, "Give")
		RIN1 W 0 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 J 1 A_SeekerMissile(180, 180, SMF_PRECISE)
		RIN1 W 0 A_JumpIfCloser(32, "Give")
		RIN1 W 0 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 K 1 A_SeekerMissile(180, 180, SMF_PRECISE)
		RIN1 W 0 A_JumpIfCloser(32, "Give")
		RIN1 W 0 A_Explode(user_POWER, radius, 0, 0, radius+1)
		RIN1 L 1 A_SeekerMissile(180, 180, SMF_PRECISE)
		RIN1 W 0 A_JumpIfCloser(32, "Give")
		RIN1 W 0 A_SpawnItemEx("RingSparkle", frandom(-16, 16), frandom(-16, 16), frandom(-16, 16))
		RIN1 W 0 A_JumpIf(CallACS("4SP_CheckAlive")==0, "Death")
		goto Return+3
	Death: // As a failsafe
	Give:
		RIN1 A 0 A_GiveToTarget("RingReturn", 1)
		RIN1 A 0 A_GiveToTarget("RingManAmmo", 1)
		RIN1 A 0 A_TakeFromTarget("RingmanReloading", 1)
		stop
	}
}

