actor ETankSP : CustomInventory replaces ETank
{
inventory.amount 1
inventory.maxamount 1
inventory.pickupmessage "$PU_ETANK"
Tag "$TAG_ETANK"
inventory.icon "ETANK"
Inventory.PickupSound "item/1up"
+INVBAR
+COUNTITEM
scale 2.0
States
{
Spawn:
EBAL F 0 
EBAL F 0 Thing_ChangeTID(0,999)
EBAL FE 6
Goto Spawn+2
Use:
EBAL E 0 A_JumpIf(CallACS("4SP_HealthManager",0),"Success")
fail
Success:
EBAL E 0 A_PlaySound("item/energyup")
EBAL E 0 A_PlaySoundEx("item/refill","Voice")
TNT1 A 0 ACS_NamedExecuteAlways("4SP_HealthManager",0,1,200)
EBAL E 0 A_TakeInventory("ETank",1)
fail
Death:
TNT1 A 0
stop
}
}

actor SmallHealthSP : CustomInventory replaces SmallHealth
{
inventory.pickupmessage "$PU_SMALLHEALTH"
+COUNTITEM
Scale 2.0
States
{
Spawn:
HBAL AB 6
loop
Pickup:
TNT1 A 0 A_JumpIf(CallACS("4SP_HealthManager",0),"Heal")
fail
Heal:
TNT1 A 0 A_PlaySound("item/energyup",3,1.0)
TNT1 A 0 ACS_NamedExecuteAlways("4SP_HealthManager",0,1,15)
stop
}
}

