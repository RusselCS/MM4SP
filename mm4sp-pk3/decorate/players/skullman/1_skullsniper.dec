actor SkullmanWep : BaseMM8BDMWep
{
Dropitem ""
inventory.icon "NULLICON"
Weapon.AmmoUse 1
Weapon.AmmoGive 3
Weapon.SlotNumber 1
Tag "Skull Sniper"
Inventory.Pickupmessage "Power up! To the grave..."
weapon.ammotype "SkullManAmmo"
+INVENTORY.UNDROPPABLE
+WEAPON.NOAUTOFIRE
States
{
Spawn:
WEAP X 1
loop
Ready:
SKU1 A 0 ACS_ExecuteAlways(998,0,787)
SKU1 A 0 A_TakeInventory("SkullBarrierUsed",999)
SKU1 A 1 A_WeaponReady
Goto Ready+2
Deselect:
TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_Lower
SKU1 A 1 A_Lower
Loop
Select:
TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_Raise
SKU1 A 1 A_Raise
Loop
Fire:
SKU1 A 0 A_JumpIfNoAmmo("NoAmmo")
SKU1 A 0 A_PlaySoundEx("weapon/skullbust","Weapon")
SKU1 A 0 A_FireCustomMissile("SkullSniperShot",0,0,8,0)
SKU1 BCA 4
SKU1 B 0 A_Refire
goto Ready+2
NoAmmo:
SKU1 A 1
Goto Ready+2
}
}

actor SkullManAmmo : Ammo
{
inventory.amount 1
inventory.maxamount 3
+INVENTORY.IGNORESKILL
}

